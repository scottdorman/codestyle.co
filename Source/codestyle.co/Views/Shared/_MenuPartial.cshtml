@helper IsActive(string actionName, string controllerName)
{
    var currentAction = ViewContext.RouteData.GetRequiredString("action");
    var currentController = ViewContext.RouteData.GetRequiredString("controller");

    if (currentController == controllerName)
    {
        <text>active</text>
    }
}

@helper MenuItem(string actionName, string controllerName, string text)
{
    <li class="@IsActive(actionName, controllerName)">
        <a href="@Url.Action(actionName, controllerName)">@text</a>
    </li>
}

